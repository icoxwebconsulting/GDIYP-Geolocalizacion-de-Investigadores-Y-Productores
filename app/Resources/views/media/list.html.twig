{% extends ':admin:base.html.twig' %}

{% block title %}Archivos{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}Archivos{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <i class="fa fa-align-justify"></i> Gestor de Archivos
        </div>
        <div class="card-block">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Período</th>
                    <th>Título</th>
                    <th>Tipo</th>
                    <th>Noticias</th>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <th>Creado por</th>
                    {% endif %}
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {%  for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.created | ago }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.type.name }}</td>
                    <td>
                        {% if entity.news %}
                            {{ entity.news.title }}
                        {% endif %}
                    </td>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <td>{{ entity.createdBy.username }}</td>
                    {% endif %}
                    <td>
                        <a data-target="#delete-modal" data-toggle="modal" data-whatever="{{ path('media_delete', {id: entity.id}) }}"><i class="fa fa-trash"></i></a>
                        <a href="{{ path('media_edit', {id: entity.id}) }}"><i class="fa fa-pencil"></i></a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Prev</a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">2</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">4</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}