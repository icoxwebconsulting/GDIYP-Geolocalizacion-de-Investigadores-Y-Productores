{% extends ':admin:base.html.twig' %}

{% block title %}News{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}News{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <i class="fa fa-align-justify"></i> News Manager
        </div>
        <div class="card-block">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Period</th>
                    <th>Title</th>
                    <th>Subtitle</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Reported</th>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <th>Created by</th>
                    {% endif %}
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {%  for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.created | ago }}</td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.subtitle }}</td>
                    <td>{{ entity.description | truncate(10) }}</td>
                    <td>
                        {% if entity.category %}
                            {{ entity.category.name }}
                        {% endif %}
                    </td>
                    <td>
                        {% if entity.reported == 0 %}
                            No
                        {% else %}
                            Yes
                        {% endif %}
                    </td>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <td>{{ entity.createdBy.firstName }}</td>
                    {% endif %}
                    <td>
                        <a data-target="#delete-modal" data-toggle="modal" data-whatever="{{ path('news_delete', {id: entity.id}) }}"><i class="fa fa-trash"></i></a>
                        <a href="{{ path('news_edit', {id: entity.id}) }}"><i class="fa fa-pencil"></i></a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">Prev</a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">2</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">4</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}