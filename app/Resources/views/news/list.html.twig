{% extends ':admin:base.html.twig' %}

{% block title %}{{ 'News' | trans }}{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}{{ 'News' | trans }}{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <i class="fa fa-align-justify"></i> {{ 'News Manager' | trans }}
        </div>
        <div class="card-block">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>{{ 'Period' | trans }}</th>
                    <th>{{ 'Title' | trans }}</th>
                    <th>{{ 'Subtitle' | trans }}</th>
                    <th>{{ 'Description' | trans }}</th>
                    <th>{{ 'Category' | trans }}</th>
                    <th>{{ 'Reported' | trans }}</th>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th>{{ 'Created by' | trans }}</th>
                    {% endif %}
                    {% if not is_granted('ROLE_ADMIN') %}
                        <th>{{ 'Actions' | trans }}</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody>
                {%  for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.created | ago }}</td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.subtitle }}</td>
                    <td>{{ entity.description | truncate(10) }}</td>
                    <td>
                        {% if entity.category %}
                            {{ entity.category.name }}
                        {% endif %}
                    </td>
                    <td>
                        {% if entity.reported == 0 %}
                            NO
                        {% else %}
                            {{ 'YES' | trans }}
                        {% endif %}
                    </td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>{{ entity.createdBy.firstName }}</td>
                    {% endif %}
                    {% if not is_granted('ROLE_ADMIN') %}
                    <td>
                        <a data-target="#delete-modal" data-toggle="modal" data-whatever="{{ path('news_delete', {id: entity.id}) }}"><i class="fa fa-trash"></i></a>
                        <a href="{{ path('news_edit', {id: entity.id}) }}"><i class="fa fa-pencil"></i></a>
                    </td>
                    {% endif %}
                </tr>
                {% endfor %}
                </tbody>
            </table>
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">{{ 'Prev' | trans }}</a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">2</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">4</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">{{ 'Next' | trans }}</a>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}