<div class="col-md-3">
    <aside id="sidebar">
        <section>
            <header><h2>{{ 'News' | trans }}</h2></header>
            {% for new in practiceNews %}
            <a href="{{ path('homepage_practice_new_show', {'id':new.id}) }}" class="item-horizontal small">
                <h3>{{ new.title }}</h3>
                <figure>{{ new.subtitle }}</figure>
                <div class="wrapper">
                    {#<div class="image"><img src="assets/img/items/1.jpg" alt=""></div>#}
                    <div class="info">
                        <span>{{ new.category.name }}</span>
                    </div>
                </div>
            </a>
            {% endfor %}
        </section>
    </aside>
    <!-- /#sidebar-->
</div>
