<div class="row" style="text-align: center;">
    <a onclick="filterByUser('investigator')" class="btn btn-default">{{ 'Investigator/Technician' | trans }}</a>
    <a onclick="filterByUser('producer')" class="btn btn-primary btn-producer">{{ 'Producer/Experience' | trans }}</a>
</div>
<form id="search-form" class="main-search border-less-inputs" role="form" method="post" action="{{ path('homepage') }}">
    <div class="row">
        <div class="col-md-3">
            <select class="form-control" name="country" id="country">
                <option value="0">{{ 'Country' | trans }}</option>
            </select>
        </div>

        <div class="col-md-3">
            <select class="form-control" name="region" id="region">
                <option value="0">{{ 'Region' | trans }}</option>
            </select>
        </div>

        <div class="col-md-3">
            <select class="form-control" name="city" id="city">
                <option value="0">{{ 'City' | trans }}</option>
            </select>
        </div>

        <div class="col-md-3">
            <button type="submit" class="btn btn-default" style="display: inline; width: 18%">
                <i class="fa fa-search"></i>
            </button>
            <button id="advanced-search" style="display: inline;width: 80%" type="button" class="btn btn-primary disabled">
                {{ 'Advanced search' | trans }}
            </button>
        </div>

    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="pull-right">
                <p style="font-size: 12px; padding: 10px">
                    Para activar la búsqueda avanzada debe filtrar primero por Investigador/Técnico o Práctica/Experiencia
                </p>
            </div>
        </div>
    </div>
    <input type="hidden" name="type_user" id="type-user" value="all">
    <!-- /.input-row -->
</form>
<!-- /.main-search -->

