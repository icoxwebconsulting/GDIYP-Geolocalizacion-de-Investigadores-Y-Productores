<div class="modal fade" id="report-modal">
    <div class="modal-dialog">
        <form id="form" method="post" action="">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="toggle-navigation" style="float: right;">
                        <div class="icon" data-dismiss="modal">
                            <div class="line"></div>
                            <div class="line"></div>
                            <div class="line"></div>
                        </div>
                    </div>
                    <h4 class="modal-title">{{ 'Report Content' | trans }}</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="description">{{ 'Specify your reason for report this content' | trans }}</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required=""></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-info" data-dismiss="modal">NO</button>
                    <button type="submit" class="btn btn-danger">{{ 'YES' | trans }}</button>
                </div>
            </div>
        </form>
    </div>
</div>

{% block extra_js %}
    <script>
        $(document).ready(function(){
            $('#report-modal').on('show.bs.modal', function (event) {
                var a = $(event.relatedTarget);// link that triggered the modal
                var href = a.data('whatever');
                $("#form").attr("action",href);
            })
        });
    </script>
{% endblock %}