{% extends ':homepage:base.html.twig' %}

{% block title %}Página principal{% endblock %}

{% block content %}
    Vista de la página de inicio
    <a href="{{ path('fos_user_security_login') }}">login</a>

    <ul>
        {% for user in users %}
            <li>{{ user.username }} <a href="{{ path('homepage_user_show', { id: user.id }) }}">Ver Detalle</a>|
                {% if user.reported == 0 %}
                    <a data-target="#report-modal" data-toggle="modal" data-whatever="{{ path('homepage_user_report', {id: user.id}) }}">Reportar</a></li>
                {% endif %}
        {% endfor %}
    </ul>
    {#{{ dump() }}#}
{% endblock %}