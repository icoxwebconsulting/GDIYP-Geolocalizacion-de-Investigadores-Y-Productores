{% extends ':admin:base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}Dashboard{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    {{ 'Users List' | trans }}
                </div>
                <div class="card-block">
                    <!--/.row-->
                    <br>
                    <table class="table table-hover table-outline mb-0 hidden-sm-down">
                        <thead class="thead-default">
                        <tr>
                            <th>{{ 'Username' | trans }}</th>
                            <th>{{ 'Name' | trans }}</th>
                            <th>{{ 'Email' | trans }}</th>
                            <th>{{ 'User type' | trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                        <tr>
                            <td class="text-xs-left">
                                <div>
                                    {{ user.username }}                                    
                                </div>
                            </td>
                            <td>
                                <div class="text-xs-left">
                                    {{ user.getFirstName() ~ " " ~ user.getLastName()}}
                                </div>
                            </td>
                            <td class="text-xs-left">
                                <div>
                                    {{ user.email }}
                                </div>
                            </td>
                            <td class="text-xs-left">
                                <div>
                                    {% if (user.roles[0] == 'ROLE_PRODUCER') %}
                                        {{ 'Producer' | trans }}
                                    {% else %}
                                        {{ 'Investigator' | trans }}
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--/.col-->
    </div>
{% endblock %}
