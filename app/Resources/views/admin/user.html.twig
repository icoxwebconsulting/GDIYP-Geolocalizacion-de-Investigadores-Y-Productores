{% extends ':admin:base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}Dashboard{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    {{ 'Users List' | trans }}
                </div>
                <div class="card-block">
                    <!--/.row-->
                    <br>
                    <table class="table table-hover table-outline mb-0 hidden-sm-down">
                        <thead class="thead-default">
                        <tr>
                            <th>{{ 'Username' | trans }}</th>
                            <th>{{ 'Name' | trans }}</th>
                            <th>{{ 'Email' | trans }}</th>
                            <th>{{ 'User type' | trans }}</th>
                            <th>{{ '' | trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                        <tr id="userRow-{{ user.id }}">
                            <td class="text-xs-left">
                                <div>
                                    {{ user.username }}                                    
                                </div>
                            </td>
                            <td>
                                <div class="text-xs-left">
                                    {{ user.getFirstName() ~ " " ~ user.getLastName()}}
                                </div>
                            </td>
                            <td class="text-xs-left">
                                <div>
                                    {{ user.email }}
                                </div>
                            </td>
                            <td class="text-xs-left">
                                <div>
                                    {% if (user.roles[0] == 'ROLE_PRODUCER') %}
                                        {{ 'Producer' | trans }}
                                    {% else %}
                                        {{ 'Investigator' | trans }}
                                    {% endif %}
                                </div>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-default" onclick="remove({{ user.id }})">
                                    <i class="fa fa-close"></i> Eliminar
                                </button>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--/.col-->
    </div>
{% endblock %}

{% block extra_js %}

    <script>

        function remove(id) {
            bootbox.confirm({
                title: "Â¿Estas seguro que desea eliminar este usuario?",
                message: "Al eliminar este usuario seran tambien eliminadas sus actividades realizadas en el sitio.",
                buttons: {
                    cancel: {
                        label: '<i class="fa fa-times"></i> Cancelar'
                    },
                    confirm: {
                        label: '<i class="fa fa-check"></i> Confirmar'
                    }
                },
                callback: function (result) {
                    console.log('This was logged in the callback: ' + result);

                    if (result) {
                        var url = Routing.generate('user_delete', {user: id});
                        $.post(url, function () {
                        }).done(function () {
                            $.notify("Se ha eliminado el usuario satisfactoriamente", "success");
                            $("#userRow-"+id).hide();
                        }).fail(function() {
                            $.notify("No se ha podido eliminar el usuario.", 'warn');
                        });
                    }
                }
            });
        }

    </script>

{% endblock %}