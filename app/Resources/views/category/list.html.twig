{% extends ':admin:base.html.twig' %}

{% block title %}{{ 'Category' | trans }}{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}{{ 'Category' | trans }}{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <i class="fa fa-align-justify"></i> {{ 'Category Manager' | trans }}
        </div>
        <div class="card-block">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>{{ 'Name' | trans }}</th>
                    <th>{{ 'Main Category' | trans }}</th>
                    <th>Status</th>
                    <th>{{ 'Actions' | trans }}</th>
                </tr>
                </thead>
                <tbody>
                {%  for entity in entities %}
                    {% if entity.id != 1 %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.name }}</td>
                        <td>
                            {% if entity.parent %}
                                {{ entity.parent.name }}
                            {% endif %}
                        </td>
                        <td>{{ entity.status.name }}</td>
                        <td>
                            <a href="{{ path('category_edit', {id: entity.id}) }}"><i class="fa fa-pencil"></i></a>
                        </td>
                    </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">{{ 'Prev' | trans }}</a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">2</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">4</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">{{ 'Next' | trans }}</a>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}