{% extends "admin/base.html.twig" %}

{% block title %}{{ 'Category' | trans }}{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}{{ 'Category' | trans }}{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
<div class="col-md-6">
    <div class="card">
        <div class="card-header">
            <strong>{{ 'Category' | trans }}</strong>
        </div>
        {{ form_start(form, {'attr':{ 'class': 'form-horizontal'}}) }}
            <div class="card-block">
                <div class="form-group row">
                    <label class="col-md-3 form-control-label" for="first-name">{{ 'Name' | trans }}</label>
                    <div class="col-md-9">
                        {{ form_widget(form.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Name'}}) }}
                    </div>
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group row">
                    <label class="col-md-3 form-control-label" for="last-name">{{ 'Main Category' | trans }}</label>
                    <div class="col-md-9">
                        {{ form_widget(form.parent, { 'attr': { 'class': 'form-control'}}) }}
                    </div>
                    {{ form_errors(form.parent) }}
                </div>
                {{ form_rest(form) }}
            </div>
            <div class="card-footer">
                <a href="{{ path('category_list') }}" class="btn btn-sm btn-success"><i class="fa fa-mail-reply"></i> {{ 'Back' | trans }}</a>
                <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-dot-circle-o"></i> {{ 'Send' | trans }}</button>
            </div>
        {{ form_end(form)}}
    </div>
</div>
    {% if not entity.parent %}
    <script>
        var txt = "{{ 'Select a value'| trans }}";
        $("#appbundle_category_parent").prepend("<option value='0' selected='selected'>"+txt+"</option>");
    </script>
    {% endif %}
{% endblock %}
