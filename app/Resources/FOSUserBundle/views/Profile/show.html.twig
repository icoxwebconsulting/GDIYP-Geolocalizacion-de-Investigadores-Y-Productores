{% extends ":admin:base.html.twig" %}

{% block title %}Profile{% endblock %}

{% block top_content %}
    {% embed ':_partial:breadcrumb.html.twig' %}
        {% block breadcrumb %}Profile{% endblock %}
    {% endembed %}
{% endblock %}

{% block content %}
    <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
        <div class="well profile">
            <div class="col-sm-12">
                <div class="col-xs-12 col-sm-8">
                    <h2>{{ user.firstName }} {{ user.lastName }} </h2>
                    <p><strong>Email: </strong> {{ user.email }}</p>
                    <p><strong>Username: </strong> {{ user.username }}</p>
                    <p>
                        <strong>User type: </strong>
                        {% if is_granted('ROLE_PRODUCER') %}
                            Producer
                        {% endif %}
                        {% if is_granted('ROLE_INVESTIGATOR') %}
                            Investigator
                        {% endif %}
                    </p>
                </div>
                <div class="col-xs-12 col-sm-4 text-center">
                    <figure>
                        <img src="{{asset(vich_uploader_asset(user, 'image')) }}" width="70%" alt="" class="img-avatar">
                    </figure>
                </div>
            </div>
            <div class="col-sm-12">
                <a class="btn btn-primary" href="{{ path('user_edit',{id: user.id}) }}">Edit Profile</a>
                <a class="btn btn-warning" href="{{ path('fos_user_change_password',{id: user.id}) }}">Change Password</a>
            </div>
        </div>
    </div>
{% endblock %}