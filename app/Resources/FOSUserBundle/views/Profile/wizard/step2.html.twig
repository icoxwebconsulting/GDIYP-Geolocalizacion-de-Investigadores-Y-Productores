<div class="row setup-content" id="step-2">
    <div class="col-md-10 col-sm-offset-1 col-centered">
        <div class="col-md-12">
            <h3 class="fs-title">Personal Information</h3>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-control-label" for="first-name">First Name</label>
                    {{ form_widget(form.first_name, { 'attr': { 'class': 'form-control', 'placeholder': 'John'}}) }}
                    {{ form_errors(form.first_name) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-control-label" for="last-name">Last Name</label>
                    {{ form_widget(form.last_name, { 'attr': { 'class': 'form-control', 'placeholder': 'Smith'}}) }}
                    {{ form_errors(form.last_name) }}
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label for="summernote" class="form-control-label">Summary</label>
                    <textarea name="summary" id="summary" cols="30" rows="50">{{ profile.summary }}</textarea>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-control-label" for="email">Email</label>
                    {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'placeholder': 'smith@mail.com', 'disabled': 'disabled'}}) }}
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-control-label" for="job-title">Job Title</label>
                    <input id="job-title" type="text" name="job_title" value="{{ profile.jobTitle }}" class="form-control" placeholder="Bioinvestigator" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="current-image" class="form-control-label">Current Image</label>
                    {% if entity.imageName %}
                        <figure>
                            <img src="{{asset(vich_uploader_asset(entity, 'image')) }}" width="20%"  style="margin: auto; display: block;">
                        </figure>
                    {% else %}
                        Doesn't have a profile image
                    {% endif %}
                </div>
                <div class="form-group">
                    <label class="form-control-label" for="image">Change Image</label>
                    {{ form_widget(form.image, { 'attr': { 'class': 'form-control'}}) }}
                    {{ form_errors(form.image) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-control-label" for="job-title">Residence Place</label>
                    <div class="form-group">
                        <label class="col-md-3 form-control-label" for="country">Country</label>
                        <div class="col-md-9">
                            <select class="form-control" name="country" id="country" required>
                                <option value="">Select Country</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 form-control-label" for="region">Region</label>
                        <div class="col-md-9">
                            <select class="form-control" name="region" id="region" required>
                                <option value="">Select Region</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 form-control-label" for="city" id="label_city">City</label>
                        <div class="col-md-9">
                            <select class="form-control" name="residence_place" id="city">
                                <option value="">Select City</option>
                            </select>
                            <input id="other_city" type="text" style="display: none;" class="form-control" name="city_name" placeholder="City name">
                        </div>
                    </div>
                    <a id="add_city" style="display:none" href="#">Add other city</a>
                </div>
            </div>
            <button class="btn btn-primary nextBtn pull-right" type="button" >Next</button>
        </div>
    </div>
</div>