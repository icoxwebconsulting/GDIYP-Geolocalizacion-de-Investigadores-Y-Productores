<fieldset>
    <h2 class="fs-title">Información de la institución</h2>
    <h3 class="fs-subtitle">Paso 2</h3>
    <div class="col-md-12">
        <div class="col-md-6">
            <div class="form-group">
                <div class="form-group row">
                    <label class="col-md-3 form-control-label" for="institution_type">Tipo de Institución</label>
                    <div class="col-md-9">
                        <select class="form-control" name="institution_type" id="institution_type">
                            <option value="">Seleccionar el tipo de institución</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label style="display:none" class="col-md-3 form-control-label" for="institution" id="institution_label">Institución</label>
                    <div class="col-md-9">
                        <select style="display:none" class="form-control" name="institution" id="institution">
                            <option value="">Seleccionar la institución</option>
                        </select>
                        <input class="form-control" style="display:none" id="other_institution" type="text" name="institution_name" placeholder="Institution name">
                    </div>
                </div>

                <br>
                <a id="add_institution" style="display:none" href="#">Añadir otra institución</a>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 form-control-label" for="search-address">Dirección</label>
        <span class="help-block">Por favor escriba su dirección y mueva el marcador</span>
        {#<div class="col-md-9">#}
        <input id="search-address" type="text" name="address" value="{{ profile.address ? profile.address.address : ''}}" class="form-control controls" placeholder="Search address">
        {#</div>#}
        <input id="lat" type="hidden" name="latitude" value="{{ profile.address ? profile.address.latitude : 0 }}"><br>
        <input id="lng" type="hidden" name="longitude" value="{{ profile.address ? profile.address.longitude : 0 }}">
    </div>
    <div class="form-group row" style="margin-bottom: 0rem;">
        <div class="col-md-12">
            <div id="map-canvas"></div>
        </div>
    </div>
    <input type="button" name="previous" class="previous action-button" value="Anterior" />
    <input type="button" name="next" class="next action-button" value="Siguiente" />
</fieldset>