<fieldset>
    <h2 class="fs-title">Lugar de investigación</h2>
    <h3 class="fs-subtitle">Paso 5</h3>
    <div class="col-md-12">
        <div class="col-md-6">
            <div class="form-group">
                <label class="form-control-label" for="job-title">Lugar de investigación</label>
                <div class="form-group row">
                    <label class="col-md-3 form-control-label" for="country">País</label>
                    <div class="col-md-9">
                        <select class="form-control" name="country" id="country2">
                            <option>Seleccionar país</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 form-control-label" for="region">Región</label>
                    <div class="col-md-9">
                        <select class="form-control" name="region2" id="region2">
                            <option value="">Seleccionar región</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 form-control-label" for="city">Ciudad</label>
                    <div class="col-md-9">
                        <select class="form-control" name="research_place" id="city2">
                            <option value="">Seleccionar Ciudad</option>
                        </select>
                        <input id="other_city2" type="text" style="display: none;" class="form-control" name="city_name2" placeholder="City name">
                    </div>
                </div>
                <a id="add_city2" style="display:none" href="#">Add Other City</a>
            </div>
        </div>
    </div>
    <input type="button" name="previous" class="previous action-button" value="Anterior" />
    <input type="button" name="next" class="next action-button" value="Siguiente" />
</fieldset>