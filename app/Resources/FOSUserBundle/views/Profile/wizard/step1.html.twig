<div class="row setup-content" id="step-1">
    <div class="col-md-10 col-sm-offset-1 col-centered">
        <br>
        <div class="row">
            <div class="col-md-12">
                <h3 class="fs-title">Institution Information</h3>
                <div class="col-md-6">
                        <div class="form-group">
                            <div class="form-group row">
                                <label class="col-md-4 form-control-label" for="institution_type">Institution Type</label>
                                <div class="col-md-8">
                                    <select required class="form-control" name="institution_type" id="institution_type">
                                        <option value="">Select Institution Type</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label style="display:none" class="col-md-4 form-control-label" for="institution" id="institution_label">Institution</label>
                                <div class="col-md-8">
                                    <select required style="display:none" class="form-control" name="institution" id="institution">
                                        <option value="">Select Institution</option>
                                    </select>
                                    <input class="form-control" style="display:none" id="other_institution" type="text" name="institution_name" placeholder="Institution name">
                                </div>
                            </div>

                            <br>
                            <a id="add_institution" style="display:none" href="#">Add other institution</a>
                        </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <label class="col-md-3 form-control-label" for="search-address">Address</label>
                        <span class="help-block">Please type your address and move the marker</span>
                    </div>
                    <div class="col-md-9">
                        <input required id="search-address" type="text" name="address" value="{{ profile.address ? profile.address.address : ''}}" class="form-control controls" placeholder="Search address">
                    </div>
                    <input id="lat" type="hidden" name="latitude" value="{{ profile.address ? profile.address.latitude : 0 }}"><br>
                    <input id="lng" type="hidden" name="longitude" value="{{ profile.address ? profile.address.longitude : 0 }}">
                </div>
                <div class="form-group row" style="margin-bottom: 0rem;">
                    <div class="col-md-12">
                        <div id="map-canvas"></div>
                    </div>
                </div>
                <br>
                <button class="btn btn-primary nextBtn pull-right" type="button" >Next</button>
            </div>
        </div>
    </div>
</div>