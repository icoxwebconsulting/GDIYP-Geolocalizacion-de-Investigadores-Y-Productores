<div class="row setup-content" id="step-1">
    <div class="col-md-10 col-sm-offset-1 col-centered">
        <br>
        <div class="row">
            <div class="col-md-12">
                <h3 class="fs-title">Informacion personal</h3>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-control-label" for="first-name">Nombre</label>
                        {{ form_widget(form.first_name, { 'attr': { 'class': 'form-control', 'placeholder': 'John', 'required': true}}) }}
                        {{ form_errors(form.first_name) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-control-label" for="last-name">Apellido</label>
                        {{ form_widget(form.last_name, { 'attr': { 'class': 'form-control', 'placeholder': 'Smith', 'required': true}}) }}
                        {{ form_errors(form.last_name) }}
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="summernote" class="form-control-label">Resumen</label>
                        <textarea name="summary" id="summary" cols="30" rows="50" required>{{ profile.summary }}</textarea>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-control-label" for="email">Email</label>
                        {{ form_widget(form.email, { 'attr': { 'class': 'form-control', 'placeholder': 'smith@mail.com', 'disabled': 'disabled'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-control-label" for="job-title">Título profesional</label>
                        <input id="job-title" type="text" name="job_title" value="{{ profile.jobTitle }}" required class="form-control" placeholder="Bioinvestigator">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="current-image" class="form-control-label">Imagen actual</label>
                        {% if entity.imageName %}
                            <figure>
                                <img src="{{asset(vich_uploader_asset(entity, 'image')) }}" width="20%"  style="margin: auto; display: block;">
                            </figure>
                        {% else %}
                            Doesn't have a profile image
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="image">Cambiar imagen</label>
                        {{ form_widget(form.image, { 'attr': { 'class': 'form-control'}}) }}
                        {{ form_errors(form.image) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-control-label" for="job-title">Lugar de residencia</label>
                        <div class="form-group row">
                            <label class="col-md-3 form-control-label" for="country">País</label>
                            <div class="col-md-9">
                                <select required class="form-control" name="country" id="country">
                                    <option value="0">Seleccionar país</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 form-control-label" for="region">Región</label>
                            <div class="col-md-9">
                                <select required class="form-control" name="region" id="region">
                                    <option value="">Seleccionar región</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 form-control-label" for="city" id="label_city">Ciudad</label>
                            <div class="col-md-9">
                                <select required class="form-control" name="residence_place" id="city">
                                    <option value="">Seleccionar ciudad</option>
                                </select>
                                <input id="other_city" type="text" style="display: none;" class="form-control" name="city_name" placeholder="City name">
                            </div>
                        </div>
                        <a id="add_city" style="display:none" href="#">Añadir otra ciudad</a>
                    </div>
                </div>
            </div>
        </div>
        <br><hr><br>
        <div class="row">
            <div class="col-md-12">
                <h3 class="fs-title">Información de la institución</h3>
                <div class="col-md-6">
                        <div class="form-group">
                            <div class="form-group row">
                                <label class="col-md-4 form-control-label" for="institution_type">Tipo de Institución</label>
                                <div class="col-md-8">
                                    <select required class="form-control" name="institution_type" id="institution_type">
                                        <option value="">Seleccionar el tipo de institución</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row" style="margin-bottom:0px;">
                                <label style="display:none" class="col-md-4 form-control-label" for="institution" id="institution_label">Institución</label>
                                <div class="col-md-8">
                                    <select required style="display:none" class="form-control" name="institution" id="institution">
                                        <option value="">Seleccionar la institución</option>
                                    </select>
                                    <input class="form-control" style="display:none" id="other_institution" type="text" name="institution_name" placeholder="Institution name">
                                </div>
                            </div>

                            <br>
                            <a id="add_institution" style="display:none" href="#">Añadir otra institución</a>
                        </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <label class="col-md-3 form-control-label" for="search-address">Dirección</label>
                        <span class="help-block">Por favor escriba su dirección y mueva el marcador</span>
                    </div>
                    <div class="col-md-9">
                        <input required id="search-address" type="text" name="address" value="{{ profile.address ? profile.address.address : ''}}" class="form-control controls" placeholder="Search address">
                    </div>
                    <input id="lat" type="hidden" name="latitude" value="{{ profile.address ? profile.address.latitude : 0 }}"><br>
                    <input id="lng" type="hidden" name="longitude" value="{{ profile.address ? profile.address.longitude : 0 }}">
                </div>
                <div class="form-group row" style="margin-bottom: 0rem;">
                    <div class="col-md-12">
                        <div id="map-canvas"></div>
                    </div>
                </div>
                <br>
                <button class="btn btn-primary nextBtn pull-right" type="button" >Siguiente</button>
            </div>
        </div>
    </div>
</div>
