<div class="row setup-content" id="step-1">
    <div class="col-md-10 col-sm-offset-1 col-centered">
        <br>
        <div class="row">
            <div class="col-md-12">
                <h3 class="fs-title">Información de la institución</h3>
                <div class="col-md-6">
                    <div class="form-group">
                        <div class="form-group">
                            <label class="col-md-4 form-control-label" for="institution_type">Tipo de Institución</label>
                            <div class="col-md-8">
                                <select class="form-control" name="institution_type" id="institution_type"  required="required">
                                    <option value="">Seleccionar el tipo de institución</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group" style="margin-bottom:0px;">
                            <label style="display:none" class="col-md-4 form-control-label" for="institution" id="institution_label">Institución</label>
                            <div class="col-md-8">
                                <select required style="display:none" class="form-control" name="institution" id="institution">
                                    <option value="">Seleccionar Institución</option>
                                </select>
                                <input class="form-control" style="display:none" id="other_institution" type="text" name="institution_name" placeholder="Institution name">
                            </div>
                        </div>

                        <br>
                        <a id="add_institution" style="display:none" href="#">Añadir otra institución</a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label class="col-md-3 form-control-label" for="search-address">Dirección</label>
                        <span class="help-block">Por favor escriba su dirección y mueva el marcador</span>
                    </div>
                    <div class="col-md-9">
                        <input id="search-address" type="text" name="address" value="{{ profile.address ? profile.address.address : ''}}" class="form-control controls" placeholder="Search address" required>
                    </div>
                    <input id="lat" type="hidden" name="latitude" value="{{ profile.address ? profile.address.latitude : 0 }}"><br>
                    <input id="lng" type="hidden" name="longitude" value="{{ profile.address ? profile.address.longitude : 0 }}">
                </div>
                <div class="form-group row" style="margin-bottom: 0rem;">
                    <div class="col-md-12">
                        <div id="map-canvas"></div>
                    </div>
                </div>
                <br>
                <button class="btn btn-primary nextBtn pull-right" type="button" >Siguiente</button>
            </div>
        </div>
    </div>
</div>
